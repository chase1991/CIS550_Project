<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @type do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Login", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


<style>
	.col-xs-4 {top: 13px;
			   margin-bottom: auto;}
</style>
<div class="panel panel-default">

	<!-- Default panel contents -->
	<div class="panel-heading">
		<h1 class="panel-title">What do you want to eat?</h1>
	</div>
	<div class="panel-body">
		<p>Choose a category</p>
	</div>
	<div class="col-xs-4">
		<div class="form-group">
			<select class="form-control" id="age">
				<option>Chinese Food</option>
				<option>Japanese Food</option>
				<option>American Food</option>
				<option>Mexican Food</option>
			</select>
		</div>
	</div>

	<!-- List group -->
	<div class="panel-footer clearfix">
		<div class="pull-right">
			<a href="/question_page/q2" class="btn btn-primary">Next</a>
		</div>
	</div>
</div>